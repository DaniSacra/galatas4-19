  <!-- Page Header -->
  <header class="masthead" style="background-image: url('home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Podcast Cristão</h1>
            <span class="subheading">Comunhão em São Paulo</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        
        <% @episodes.reverse.each do |episode| %>
          <div class="post-preview">
            <a href="<%= edit_episode_path(@episode) %>">
              <h2 class="post-title">
                <%= episode.title %>
              </h2>
              <h3 class="post-subtitle">
                <%= episode.description %>
              </h3>
            </a>
            <p class="post-meta">Postado em 
              <%= episode.launch %>
          </div>
          <hr>
        <% end %>

        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>
  <hr>