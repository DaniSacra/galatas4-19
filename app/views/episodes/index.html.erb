  <!-- Page Header -->
  <header class="masthead" style="background-image: url(<%= asset_path 'home-bg.jpg' %>)">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>"Até ser Cristo formado em nós"</h1>
            <span class="subheading">Galatas 4:19</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        
        <% @episodes.reverse.each do |episode| %>
          <div class="post-preview">
            <a href="<%= episode_path(episode.id) %>">
              <h2 class="post-title">
                <%= episode.title %>
              </h2>
              <h3 class="post-subtitle">
                <%= episode.subtitle %>
              </h3>
            </a>
            <p class="post-meta">
              <%= episode.launch.strftime("%d/%m/%Y") %>
          </div>
          <hr>
        <% end %>

        <!-- Pager 
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Carregar Mais &rarr;</a>
        </div>-->
      </div>
    </div>
  </div>
  <hr>